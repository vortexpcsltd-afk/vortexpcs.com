        "type": "boolean",
        "default": false
      },
      "contactEmail": {
        "type": "email",
        "default": "info@vortexpcs.co.uk"
      },
      "contactPhone": {
        "type": "string",
        "default": "+44 123 456 7890"
      },
      "whatsappNumber": {
        "type": "string"
      }
