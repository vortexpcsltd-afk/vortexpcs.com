{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./components/*"],
      "@/styles/*": ["./styles/*"]
    }
  },
  "include": [
    "src",
    "components",
    "styles",
    "config",
    "services",
    "App.tsx",
    "vite-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.backup.tsx",
    "backup-before-figma",
    "backups",
    "archive",
    "**/BACKUP_*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "src/test"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
